= form_for @submission, html: {class: 'form-horizontal'} do |f|
  %fieldset
    .form-group
      = f.label :name
      = f.text_field :name, {class: 'form-control'}
    .form-group
      = f.label :team_name
      = f.text_field :team_name, {class: 'form-control'}
    .form-group
      = f.label :email
      = f.text_field :email, {class: 'form-control'}
    .form-group
      = f.label :title
      = f.text_field :title, {class: 'form-control'}
    .form-group
      = f.label :link, "Vimeo Link"
      = f.text_field :link, {class: 'form-control'}
    .form-group
      = f.label :password, "Vimeo Link Password"
      = f.password_field :password, {class: 'form-control'}
    .form-group
      = f.label :group
      = f.select :group, options_for_select([['Elementary School', 'Elementary School'], ['Middle School', 'Middle School'], ['High School', 'High School'], ['College', 'College'], ['Professional', 'Professional']]), {class: 'form-control'}
    .form-group
      = f.label :genre
      = f.text_field :genre, {class: 'form-control'}
    .form-group
      = f.label :description
      = f.text_area :description, {class: 'form-control'}
    .form-group
      = f.label :runtime
      = f.text_field :runtime, {class: 'form-control'}
    .checkbox
      = f.check_box :accept_terms
      %p
        I have read and accept the 
        %a{href: "#terms"} terms and conditions
    = f.submit 'Submit Film'
